<form id="login" class="uk-form uk-form-horizontal">
    <div class="uk-form-row">
        <label class="uk-form-label" for="username">Username</label>
        <div class="uk-form-controls">
            <input id="loginUsername" type="text" placeholder="Username" class="uk-form-width-large">
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="password">Password</label>
        <div class="uk-form-controls">
            <input id="loginPassword" type="password" placeholder="Password" class="uk-form-width-large">
        </div>
    </div>
    <div class="uk-form-row">
        <div class="uk-form-controls">
            <button type="submit" class="uk-button uk-button-primary">Login</button>
        </div>
    </div>
</form>