{% extends 'base.html.twig' %}

{% block title %}Server Communication Setup{% endblock %}

{% block stylesheets %}
<link href="{{ asset('css/components/notify.gradient.min.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/components/notify.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/serverCommunication/config.js') }}"></script>
{% endblock %}

{% block body %}
<form id="serverConfig" class="uk-form uk-form-horizontal">
    <div class="uk-form-row">
        <label class="uk-form-label" for="secureToken">Own URI</label>
        <div class="uk-form-controls">
            <input id="ownUri" type="text" placeholder="Own URI" class="uk-form-width-large">
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="secureToken">Secure token</label>
        <div class="uk-form-controls">
            <input id="secureToken" type="password" placeholder="Secure token" class="uk-form-width-large">
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="secureTokenConfirm">Confirm secure token</label>
        <div class="uk-form-controls">
            <input id="secureTokenConfirm" type="password" placeholder="Confirm secure token" class="uk-form-width-large">
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="identifyToken">Identify token</label>
        <div class="uk-form-controls">
            <input id="identifyToken" type="password" placeholder="Identify token" class="uk-form-width-large">
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="identifyTokenConfirm">Confirm identify token</label>
        <div class="uk-form-controls">
            <input id="identifyTokenConfirm" type="password" placeholder="Confirm identify token" class="uk-form-width-large">
        </div>
    </div>
    <div class="uk-form-row">
        <div class="uk-form-controls">
            <button type="submit" class="uk-button uk-button-primary">Save</button>
        </div>
    </div>
</form>
{% endblock %}